<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".doctor.fragments.DoctorHomeFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".doctor.fragments.DoctorHomeFragment">

    <TextView
        style="@style/textBoldHeading"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="32sp"
        android:text="Dashboard" />


    <TextView
        android:id="@+id/greetings_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Good Morning, \nAbc"
        android:textSize="30sp"
        android:textColor="?attr/customTextColor"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/prescriptionLayout"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="32sp"
        android:visibility="gone"
        android:layout_height="wrap_content">

    <TextView
     android:id="@+id/prescriptionHeading"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginVertical="15dp"
        android:textColor="?attr/customTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Prescription:" />

    <TextView
        android:id="@+id/prescription"
        android:textSize="14sp"
        android:layout_marginVertical="5dp"
        android:textColor="?attr/customTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="?attr/customTextColor"
        android:layout_marginHorizontal="32sp"
        android:layout_width="match_parent"
        android:fontFamily="@font/poppins_medium"
        android:layout_height="wrap_content"
        android:text="Book an appointment" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/book_appointment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTint="@color/white"
        android:backgroundTint="@color/blue_200"
        android:text="Schedule an appointment"
        android:layout_marginHorizontal="32sp"
        tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />


    <TextView
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="?attr/customTextColor"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginHorizontal="32sp"
        android:text="Only to be used in the case of emergency" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/emergency_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTint="@color/white"
        android:drawableLeft="@drawable/ic_emergency"
        android:drawableRight="@drawable/ic_emergency"
        android:backgroundTint="@color/red"
        android:layout_marginHorizontal="32sp"
        android:text="Emergency"
        tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/message"/>



</LinearLayout>
</ScrollView>
